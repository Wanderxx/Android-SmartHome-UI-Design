<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nitin.rockpapersissor" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DrawGestureActivity"
            android:label="@string/title_activity_draw_gesture" >
        </activity>
        <activity
            android:name=".NotifyService"
            android:label="@string/title_activity_notify_service" >
        </activity>

        <service
            android:name=".NotifyService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name=".NotifyServiceActivity"
            android:label="@string/title_activity_notify_service" >
        </activity>
        <activity
            android:name=".NotificationSenderActivity"
            android:label="@string/title_activity_notification_sender" >
        </activity>
        <activity
            android:name=".NotificaitonReceiver"
            android:label="@string/title_activity_notificaiton_receiver" >
        </activity>
        <activity
            android:name=".NotificationReceiver"
            android:label="@string/title_activity_notification_receiver" >
        </activity>
    </application>

</manifest>
